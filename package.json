{
	"name": "steam-gyro-for-cemuhook",
	"description": "App to add Steam Controller's motion support to Cemuhook",
	"authors": "FrogTheFrog",
	"version": "1.4.0",
	"main": "./dist/main.bundle.js",
	"author": {
		"name": "FrogTheFrog",
		"url": "https://github.com/FrogTheFrog",
		"email": "warliukz@gmail.com"
	},
	"repository": {
		"url": "https://github.com/FrogTheFrog/steam-gyro-for-cemuhook"
	},
	"build": {
		"appId": "com.steam-gyro-for-cemuhook.app",
		"productName": "steam-gyro-for-cemuhook",
		"compression": "normal",
		"directories": {
			"output": "release"
		},
		"win": {
			"target": [
				"portable"
			],
			"publish": [
				"github"
			],
			"icon": "./assets/icon.ico"
		},
		"linux": {
			"target": [
				"AppImage",
				"pacman",
				"snap",
				"rpm",
				"deb"
			],
			"publish": [
				"github"
			],
			"icon": "./assets/icon.png",
			"category": "Utility"
		},
		"portable": {
			"artifactName": "${productName}.${ext}"
		},
		"files": [
			"dist/**/*",
			"package.json"
		]
	},
	"scripts": {
		"postinstall": "electron-rebuild",
		"lint": "tslint --project .",
		"test": "npm run lint && npm run build:dist",
		"start": "electron ./dist/main.bundle.js",
		"watch:backend": "webpack --watch --config ./webpack/backend.js",
		"watch:frontend": "webpack --watch --config ./webpack/frontend.js",
		"build:backend": "cross-env NODE_ENV=production webpack --config ./webpack/backend.js",
		"build:frontend": "cross-env NODE_ENV=production webpack --config ./webpack/frontend.js",
		"build:dist": "rimraf dist && npm run build:backend && npm run build:frontend",
		"build:win": "rimraf release && electron-builder build --win --x64",
		"build:linux": "rimraf release && electron-builder build --linux --x64"
	},
	"dependencies": {
		"microtime": "^3.0.0",
		"node-hid": "^1.2.0",
		"usb-detection": "^4.7.0"
	},
	"devDependencies": {
		"@angular/animations": "^8.2.14",
		"@angular/cdk": "^8.2.3",
		"@angular/cli": "^8.3.21",
		"@angular/common": "^8.2.14",
		"@angular/compiler": "^8.2.14",
		"@angular/compiler-cli": "^8.2.14",
		"@angular/core": "^8.2.14",
		"@angular/forms": "^8.2.14",
		"@angular/http": "^7.2.15",
		"@angular/material": "^8.2.3",
		"@angular/platform-browser": "^8.2.14",
		"@angular/platform-browser-dynamic": "^8.2.14",
		"@angular/router": "^8.2.14",
		"@mdi/svg": "^4.7.95",
		"@ngtools/webpack": "^8.3.21",
		"@swimlane/ngx-charts": "~12.1.0",
		"@types/crc": "^3.4.0",
		"@types/fs-extra": "^8.0.1",
		"@types/lodash": "^4.14.149",
		"@types/long": "^4.0.0",
		"@types/microtime": "^2.1.0",
		"@types/node": "~12.12.22",
		"@types/node-hid": "^0.7.3",
		"@types/random-js": "^2.0.0",
		"@types/webpack-env": "^1.14.1",
		"ajv": "^6.10.2",
		"autoprefixer": "^9.7.3",
		"core-js": "^3.6.1",
		"crc": "^3.8.0",
		"cross-env": "^6.0.3",
		"css-loader": "^3.4.0",
		"electron": "^7.1.7",
		"electron-builder": "^21.2.0",
		"electron-rebuild": "^1.8.8",
		"file-loader": "^5.0.2",
		"fs-extra": "^8.1.0",
		"hack-font": "^3.3.0",
		"hammerjs": "^2.0.8",
		"html-webpack-plugin": "^3.2.0",
		"kalmanjs": "^1.1.0",
		"long": "^4.0.0",
		"node-sass": "^4.13.0",
		"postcss-loader": "^3.0.0",
		"random-js": "^2.1.0",
		"random-mac": "0.0.5",
		"raw-loader": "^4.0.0",
		"rimraf": "^3.0.0",
		"rxjs": "^6.5.4",
		"sass-loader": "^8.0.0",
		"style-loader": "^1.1.2",
		"to-string-loader": "^1.1.6",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.1",
		"typescript": "~3.5.3",
		"val-loader": "^2.1.0",
		"webpack": "^4.41.4",
		"webpack-cli": "^3.3.10",
		"webpack-merge": "^4.2.2",
		"webpack-node-externals": "^1.7.2",
		"winston": "^3.2.1",
		"zone.js": "^0.10.2"
	}
}
