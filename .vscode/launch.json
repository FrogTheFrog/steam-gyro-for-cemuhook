{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Webpack: Frontend",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config",
                "./webpack/frontend.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "outputCapture": "std",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "${workspaceRoot}/dist/main.bundle.js"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Electron: chrome renderer",
            "userDataDir": "${workspaceRoot}/.chrome",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "${workspaceRoot}/dist/main.bundle.js"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "webRoot": "${workspaceRoot}/src",
            "timeout": 30000
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "trace": true,
            "port": 9223,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/src",
            "timeout": 30000
        },
        {
            "name": "Linux Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/backend/main.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}/dist",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--enable-logging"
            ],
            "env": {},
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal"
        },
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}